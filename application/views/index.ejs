<%
    const darkModeClassString = darkMode ? "app-body electron-body js-enabled theme-dark" : "app-body electron-body js-enabled";
%>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr" class="fluent-youtube-downloader js-enabled will-update-frequently" theme="<%- darkMode ? 'dark' : 'white' -%>">
<head>
    <%- include("components/_head", {title: "Youtube Converter - Rohan Kanhaisingh", description: "Convert Youtube video's"}) -%>
    <link href="/static/styles/index.css" rel="stylesheet" />
    <title>Fluent Youtube Downloader</title>
</head>

<body class="<%- darkModeClassString -%>">
    <div class="app spa-app electron-app side-menu-collapsed">
        <div class="container">

            <%- include("partials/_titlebar") -%>

            <div class="app-loader">
                <div class="container">
                    <div class="app-loader__icon">
                        <img src="/static/media/icons/icon.png" alt="icon" />
                    </div>
                    <svg class="spinner" style="margin: 40px auto;">
                        <circle>
                            <animateTransform attributeName="transform" type="rotate" values="-90;810" keyTimes="0;1" dur="2s" repeatCount="indefinite"></animateTransform>
                            <animate attributeName="stroke-dashoffset" values="0%;0%;-157.080%" calcMode="spline" keySplines="0.61, 1, 0.88, 1; 0.12, 0, 0.39, 0" keyTimes="0;0.5;1" dur="2s" repeatCount="indefinite"></animate>
                            <animate attributeName="stroke-dasharray" values="0% 314.159%;157.080% 157.080%;0% 314.159%" calcMode="spline" keySplines="0.61, 1, 0.88, 1; 0.12, 0, 0.39, 0" keyTimes="0;0.5;1" dur="2s" repeatCount="indefinite"></animate>
                        </circle>
                    </svg>
                    <div class="app-loader__author">Made by Rohan Kanhaisingh</div>
                    <div class="app-loader__footer">Fluent Youtube Downloader | Developed by Rohan Kanhaisingh | Build 0.3.4v17.12.2023</div>
                </div>
            </div>

            <div class="app-grid-seperator">
                <%- include("partials/_side-menu") -%>

                <div class="app-content">
                    <div class="content-swappable"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="/static/scripts/index.dist.js"></script>
</body>
</html>