<div class="app-titlebar titlebar">
    <div class="titlebar__title"><span>Fluent Youtube Downloader</span></div>
    <div class="titlebar__centered">
        <div class="titlebar__centered__toggle-wrapper">
            <toggle class="titlebar__centered__toggle" for="#darkmode-toggle-text" active-text="on" inactive-text="off"></toggle>
            <label>Dark mode <span id="darkmode-toggle-text">off</span></label>
        </div>
    </div>
    <div class="titlebar__control-buttons">
        <div class="titlebar__control-buttons__button" data-action="minimize">
            <img src="/static/media/icons/windows-icon-minus.png" alt="Minimize" />
        </div>
        <div class="titlebar__control-buttons__button" data-action="maximize">
            <img src="/static/media/icons/windows-icon-square.png" alt="Maximize" />
        </div>
        <div class="titlebar__control-buttons__button" data-action="close">
            <img src="/static/media/icons/windows-icon-close.png" alt="Close" />
        </div>
    </div>
</div>